node('sync_ci') {
    stage('Checkout') {
        checkout scm
    }
    withEnv(['PATH+GO=/usr/local/go/bin']) {
        dir('./sync_ci'){
            stage('Build') {
                echo 'Building....'
                sh 'make'
            }
            stage('Test') {
                echo 'Testing....'
                sh 'GO111MODULE=on go test ./...'
            }
            stage('Deploy') {
                echo 'Deploying....'
                if (currentBuild.result == null || currentBuild.result == 'SUCCESS') { 
                    withCredentials([string(credentialsId: 'sync_ci_dsn', variable: 'dsn'), string(credentialsId: 'sync_ci_gh', variable: 'gh'), string(credentialsId: 'sync_ci_tk', variable: 'tk'), string(credentialsId: 'sync_ci_ui', variable: 'ui'), string(credentialsId: 'sync_ci_wc', variable: 'wc'), string(credentialsId: 'sync_ci_wc2', variable: 'wc2')]) {
                        sh 'sudo make install dsn="${dsn}" gh="${gh}" ui=${ui} tk="${tk}" wc="${wc}" wc2="${wc2}" PATH=/usr/local/go/bin:$PATH'
                    }
                    sh 'sudo systemctl restart sync-ci.service'
                    sleep 2
                    sh 'curl 127.0.0.1:36000/ping'
                }
            }
        }
    }
}